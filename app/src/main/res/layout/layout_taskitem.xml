<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/task_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/task_point"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/red_point" />

            <TextView
                android:id="@+id/task_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="正在进行中"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/task_point" />

            <TextView
                android:id="@+id/task_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="08:00-18:00"/>
        </LinearLayout>

        <TextView
            android:id="@+id/task_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:maxEms="40"
            android:ellipsize="end"
            android:text="具体人那地方睡觉啊df乐山大佛看来都是风景拉萨的肌肤离开的是减肥啦减肥理发了水淀粉"
            app:layout_constraintTop_toBottomOf="@+id/task_head" />


        <LinearLayout
            android:id="@+id/error_body"
            app:layout_constraintTop_toBottomOf="@+id/task_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/error_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxEms="30"
                android:ellipsize="end"
                android:text="错误描述：\n谁都放假了水淀粉了都是风景拉萨的风景乐山大佛"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/error_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/background"/>
                <ImageView
                    android:id="@+id/error_img2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/background"/>
                <ImageView
                    android:id="@+id/error_img3"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/background"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_point"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_body" />

    </android.support.constraint.ConstraintLayout>
    

</android.support.v7.widget.CardView>